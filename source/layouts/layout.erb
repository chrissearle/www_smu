<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Chris Searle" %></title>
    <%= stylesheet_link_tag "normalize", "style" %>
  </head>
  
  <body class="<%= page_classes %>">
    <%= yield %>
  </body>

  <%= javascript_include_tag 'http://code.jquery.com/jquery-2.0.3.min.js' %>
</html>